<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
       http://www.springframework.org/schema/beans/spring-beans.xsd
        http://www.springframework.org/schema/context
        http://www.springframework.org/schema/context/spring-context-4.3.xsd">
<!--    <bean class="org.springframework.context.support.PropertySourcesPlaceholderConfigurer">
        <property name="locations" value="application.properties"/>
    </bean>-->
    <context:property-placeholder location="application.properties"/>
    <context:annotation-config/>
<!--
    <bean class="org.springframework.context.annotation.CommonAnnotationBeanPostProcessor"/>
-->
    <bean class="com.example.beanPostProcessor.InjectBeanPostProcessor"/>
    <bean class="com.example.postProcessors.logBeanFactoryPostProcessors"/>
    <bean class="com.example.postProcessors.verifyBeanFactoryPostProcessors"/>
    <bean class="com.example.pools.ConnectionPool" id="pool1">
        <constructor-arg name="username" type="java.lang.String" value="${db.username}"/>
        <constructor-arg name="poolSize" value="${db.pool.size}" type="java.lang.Integer"/>
        <constructor-arg name="args" type="java.util.List">
            <list>
                <value>--arg1=value1</value>
                <value>--arg2=value2</value>
                <ref bean="driver"/>
            </list>
        </constructor-arg>
        <constructor-arg name="properties">
            <null></null>
        </constructor-arg>
        <property name="properties">
            <map>
                <entry key="url" value="postgresUrl"/>
                <entry key="password" value="0000"/>
                <entry key="driver" value-ref="driver"/>
                <entry key="test" value="#{driver.length() > 10}"/>
            </map>
        </property>
    </bean>
    <bean id="driver" class="java.lang.String">
        <constructor-arg type="java.lang.String" value="${db.driver}"/>
    </bean>
    <bean name="userRepository" class="com.example.repos.UserRepository"/>

</beans>